%% \myverb
\def\myverb#1{%
  {\let\\=\textbackslash
  \ttfamily #1}}

%% TeX on LaTeX のロゴの「on」
% 本来は small-caps にするのが正式であるが、
% この文書のフォントでは対応していないので
% サイズ縮小で代用している。
\def\my@ONscale{0.72}
\def\myON{%
  \begingroup
    \@tempdima=\f@size\p@
    \@tempdima=\my@ONscale\@tempdima
    \edef\@tempa{{\@tempdima}{\@tempdima}}%
    \expandafter\fontsize\@tempa\selectfont
    ON%
  \endgroup}

%% PDF文書情報中文字列
\pdfstringdefDisableCommands{%
  \def\<{}%
  \def\>{}%
  \def\myON{on}%
  \def\myjdash{――}%
}

%% \myphantom
\def\myphantom#1{%
  \begingroup
  \leavevmode
  \setbox\z@\hbox{#1}%
  \vrule\@width\z@\@height\ht\z@\@depth\dp\z@
  \vrule\@width\wd\z@\@height\z@\@depth\z@
  \endgroup
}

