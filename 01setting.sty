%% \myverb
\def\myverb#1{%
  {\let\\=\textbackslash
  \ttfamily #1}}

%% PDF文書情報中文字列
\pdfstringdefDisableCommands{%
  \def\<{}%
  \def\>{}%
  \def\:{}%
  \def\myjdash{――}%
}

%% \myphantom
\def\myphantom#1{%
  \begingroup
  \leavevmode
  \setbox\z@\hbox{#1}%
  \vrule\@width\z@\@height\ht\z@\@depth\dp\z@
  \vrule\@width\wd\z@\@height\z@\@depth\z@
  \endgroup
}

%% \myoutlined{<縁色>}{<内部色>}{<テキスト>}
% いわゆる"白抜き"の装飾(手抜き).
\def\my@olofs{0.02}
\def\my@outl@a#1#2{%
  \raise#1\my@olofs em\hbox to 0pt{\kern#2\my@olofs em\copy0\hss}}
\def\myoutlined#1#2#3{%
  \begingroup \leavevmode
    \setbox0\hbox{\color{#1}#3}%
    \my@outl@a++\my@outl@a+-\my@outl@a-+\my@outl@a--%
    {\color{#2}#3}%
  \endgroup
}

%% \zw : 全角幅
\begingroup
  \catcode`\_=11
  \gdef\my@jascale{\__zxjt_scale_tl}
  \gdef\zw{\dimexpr\my@jascale em\relax}
\endgroup

%% \: : 半角空き
\def\:{%
  \ifmmode \mskip\medmuskip
  \else \hskip0.5\zw
  \fi
}

